<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#666</item>
        <item name="colorPrimaryDark">#787878</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--全屏主题-->
    <style name="NoActionBarFullscreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--无标题-->
        <item name="windowNoTitle">true</item>
        <!--无ActionBar-->
        <item name="windowActionBar">false</item>
        <!--全屏-->
        <item name="android:windowFullscreen">true</item>
        <!--分隔线-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">#666</item>
        <item name="colorPrimaryDark">#787878</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="pop_anim_style">
        <item name="android:windowShowAnimation">@anim/pop_in</item>
        <item name="android:windowHideAnimation">@anim/pop_out</item>
    </style>

    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <!--窗口背景色-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--窗口无标题栏-->
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
